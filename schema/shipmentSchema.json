{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "http://localhost:3000/shipment.schema.json",
    "title": "Shipment",
    "description": "Request for shipment",
    "type": "object",
    "properties": {
        "productId": {
            "type": "integer",
            "minimum": 1000
        },
        "name": {
            "type": "string"
        },
        "addr": {
            "type": "string"
        },
        "zipcode": {
            "type": "string"
        }
    },
    "additionalProperties": false,
    "required": [
        "productId",
        "name",
        "addr",
        "zipcode"
    ]
}